<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.birju_000.xpensemanager.home">

        <Button
            android:id="@+id/myExpensesBtn"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_marginTop="125dp"
            android:text="@string/myExpensesLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parent"
            tools:layout_editor_absoluteY="52dp" />

        <Button
            android:id="@+id/addExpenseBtn"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="@string/addExpenseLabel"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toBottomOf="@+id/myExpensesBtn"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="114dp" />

        <Button
            android:id="@+id/manageExpenseBtn"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="@string/manageExpenseLabel"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toBottomOf="@+id/addExpenseBtn"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="178dp" />

        <Button
            android:id="@+id/setupBudgetBtn"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="@string/setupBudgetLabel"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toBottomOf="@+id/manageExpenseBtn" />

        <Button
            android:id="@+id/generateGraphBtn"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="@string/generateGraphLabel"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toBottomOf="@+id/setupBudgetBtn"
            tools:layout_editor_absoluteY="292dp" />

        <TextView
            android:id="@+id/txtTotalExpenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/parent"
            tools:layout_editor_absoluteX="6dp" />

        <ImageView
            android:id="@+id/iconOnline"
            android:layout_width="121dp"
            android:layout_height="103dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/getIconBtn"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:text="GET ICON"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toBottomOf="@+id/generateGraphBtn" />

    </android.support.constraint.ConstraintLayout>


</ScrollView>



